  "builds": [
    {
      "src": "backend/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "clientside/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "admin/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/server.js"
    },
    {
      "src": "/admin/(.*)",
      "dest": "admin/dist/$1"
    },
    {
      "src": "/admin",
      "dest": "admin/dist/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "clientside/dist/$1"
    },
    {
      "src": "/",
      "dest": "clientside/dist/index.html"
    }
  ],
